        <attr name="civ_fill_color_1" format="color" />
        <attr name="civ_circle_background_color_1" format="color" />
    </declare-styleable>

    <declare-styleable name="FlowLayout">
        <attr name="fHorizontalSpacing" format="dimension"/>
        <attr name="fVerticalSpacing" format="dimension"/>
    </declare-styleable>
    <declare-styleable name="FlowLayout_LayoutParams">
